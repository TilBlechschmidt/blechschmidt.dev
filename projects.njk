---
pagination:
  data: projects
  size: 1
  alias: project
  addAllPagesToCollections: true
layout: layouts/home.njk
eleventyComputed:
  title: "{{ projects[project].title }}"
permalink: /projects/{{ project }}/
---
{% set postslist = collections[ project ] %}
{% set project = projects[project] %}
{% set hideTags = true %}

<div class="prose mx-auto my-16 lg:prose-lg">
	<div class="mx-8">
		<h1 class="text-center">{{ project.title }}</h1>
		<p>{{ project.abstract }}</p>
		{% if project.url %}
			<p>
				For more details visit <a href="{{ project.url }}">{{ project.url }}</a>
			</p>
		{% endif %}

		<hr/>

		<h3>Posts about {{ project.title }}</h3>
		{% include "postslist.njk" %}
	</div>
</div>