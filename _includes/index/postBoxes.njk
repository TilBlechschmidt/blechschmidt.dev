<ol reversed class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 m-8" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
	{% for post in postslist | reverse %}
	<li onclick="window.location.href = '{{ post.url | url }}'" class="box">
		<div class="truncate">
			<a href="{{ post.url | url }}" class="text-xl font-semibold"> 
				{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}
			</a>
		</div>
		<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
		<br/>
		<span class="font-light text-sm">{{ post.data.description }}</span>
  	</li>
	{% endfor %}
</ol>

